          <dt>Sede Lavorativa:</dt>
          <dd>
            <%= @inca_subscription.work_workplace %>
          </dd>
        </dl>
      </div>
    </div>
    <hr id='hr-grey'>
    <div class='row'>
      <div class='col col-lg-4' id='text-centered'>
