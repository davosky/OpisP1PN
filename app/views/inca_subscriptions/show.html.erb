          <dd>
            <h4><strong id='text-info'>
                <%= @inca_subscription.customer_fiscal_code %></strong></h4>
          </dd>
        </dl>
      </div>
    </div>
    <hr id='hr-grey'>
    <div class='row'>
      <div class='col col-lg-6'>
        <dl class='dl-horizontal'>
          <dt>Azienda:</dt>
          <dd>
            <%= @inca_subscription.company_name %>
          </dd>
